@using ProductSellingWorkflow.Data.Views
@model IEnumerable<ProductView>

@{
    ViewBag.Title = "Product";
}
<h2>Products</h2>
<p class="clearfix">
    @Html.ActionLink("Create", "Create", "Product", null, new { @class = "btn btn-success btn-sm" })
</p>
<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Size</th>
            <th>Color</th>
            <th>Price</th>
            <th>State</th>
            <th>Tags</th>
            <th>Created At</th>
            <th>Modified At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Size</td>
                <td>@item.Color</td>
                <td>@item.Price</td>
                <td>@item.State</td>
                <td>@string.Join(", ", item.Tags)</td>
                <td>@item.CreatedAt.ToString("dd MMM yyyy HH:mm:ss")</td>
                <td>@item.ModifiedAt.ToString("dd MMM yyyy HH:mm:ss")</td>
                <td>@Html.ActionLink("Edit", "Edit", "Product", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })</td>
            </tr>
        }
    </tbody>
</table>